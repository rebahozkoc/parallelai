{
  "name": "parallelai",
  "displayName": "ParallelAI",
  "description": "Parallelize your code with ChatGPT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "parallelai.helloWorld",
        "title": "Get parallelizing suggestion ChatGPT"
      },
      {
        "command": "extension.askChatGPT",
        "title": "Ask to ChatGPT"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "parallelai",
          "title": "ParallelAI",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "parallelai": [
        {
          "id": "parallelaiView",
          "name": "ParallelAI",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Parallel AI",
      "properties": {
        "parallelai.emptyPrompt": {
          "type": "string",
          "default": "Provide some general tips for parallel programming.",
          "description": "What should the content of the prompt be when there is no selection?"
        },
        "parallelai.selectionPrompt": {
          "type": "string",
          "default": "Can you parallelize this code? Please provide the code:",
          "description": "What should the content of the prompt be when a code block is selected?"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.1.3",
    "openai": "^3.2.1",
    "uuid": "^9.0.0"
  }
}
